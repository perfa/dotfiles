[color]
ui = auto
[color "branch"]
current = yellow reverse
local = yellow
remote = green
[color "diff"]
meta = yellow
frag = magenta
old = red
new = green
[color "status"]
untracked = cyan

[alias]
st = status
ci = commit
up = !git fetch && git rebase --preserve-merges origin/`git symbolic-ref HEAD 2>/dev/null | cut  -d"/" -f 3`
br = branch
co = checkout
df = diff
dc = diff --cached
lg = log -p
lol = log --graph --decorate --pretty=online --abbrev-comit
lola = log --graph --decorate --pretty=online --abbrev-comit --all
ls = ls-files

[user]
name = Per Fagrell
email = per.fagrell@gmail.com
[status]
showUntrackedFiles = no
[core]
excludesfile = ~/.gitignore
editor = vi
[push]
default = tracking
[merge]
ff = false
tool = meld
